<style>
    .hero {
        display: flex;
        flex-direction: column; 
        align-items: center;
        text-align: center;
        gap: 2rem;
        padding: 6rem 0;
        min-height: 80vh;
        justify-content: center;
        border-bottom: 1px solid var(--border-color);
    }

    .text-content {
        max-width: 600px;
    }

    .name {
        font-size: 3.5rem;
        font-weight: 700;
        margin-bottom: 1rem;
        color: var(--heading-color);
    }

    .tagline {
        font-size: 1.25rem;
        color: var(--text-color);
        margin-bottom: 1.5rem;
    }

    .intro {
        line-height: 1.8;
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 1rem;
        margin-top: 2rem;
    }

    .social-links a {
        color: var(--accent-color);
        text-decoration: none;
        font-weight: 600;
        padding: 0.75rem 1.5rem;
        border: 1px solid var(--accent-color);
        border-radius: 999px;
        transition: all 0.3s ease;
    }

    .social-links a:hover {
        background-color: var(--accent-color);
        color: var(--bg-color);
        transform: translateY(-3px);
    }

    .image-content {
        width: 200px;
        height: 200px;
    }
    
    .profile-img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        border-radius: 50%;
        border: 6px solid var(--card-bg);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    }

    @media (min-width: 768px) {
        .hero {
            flex-direction: row; 
            justify-content: space-between;
            align-items: center;
            text-align: left;
            gap: 4rem;
        }
        .social-links {
            justify-content: flex-start;
        }
        .image-content {
            order: 2; 
            width: 280px;
            height: 280px;
            flex-shrink: 0;
        }
        .text-content {
            order: 1;
        }
        .name {
            font-size: 4.5rem;
        }
    }
</style>